  </div>

  <div class = "field form-group">
    <%= form.text_field :email, class: "form-control", placeholder: "Email"%>
  </div>

  <div class = "field form-group">
    <%= form.text_field :phone, class: "form-control", placeholder: "555 555 5555"%>
  </div>

  <div class = "field form-group">
    <%= form.text_field :twitter, class: "form-control", placeholder: "@twitter_name"%>
  </div>

<br>
  <div class = "actions"> 
    <%= form.submit class: "btn btn-secondary"%>
  </div>
<% end %>
